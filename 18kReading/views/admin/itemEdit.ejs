<!-- 引入 公用的头部 模版 -->
<% include header%>
	<!-- 路径导航 -->
	<ol class="breadcrumb">
	  <li><a href="#">栏目管理</a></li>
	  <li><a href="/admin/itemList/">栏目列表</a></li>
	  <li class="active">编辑栏目</li>
	</ol>
	<!-- 路径导航 end -->

	<!-- 添加数据的表单 -->
	<div class="row">
		<div class="col-md-4 col-sm-2 col-xs-0"></div>
		<div class="col-md-4 col-sm-8 col-xs-12">
			<form class="formAdd" action="/admin/itemUpdate" method="post">
				<input type="hidden" name="_id" value="<%=item._id%>">
				<div class="input-group">
				  <span class="input-group-addon">栏目名称</span>
				  <input type="text" class="form-control" name="name" value="<%=item.name%>">
				</div>

				<div class="input-group">
				  <span class="input-group-addon">栏目简介</span>
				  <input type="text" class="form-control" name="info" value="<%=item.info%>">
				</div>

				<div class="input-group">
				  <span class="input-group-addon">栏目排序</span>
				  <input type="number" class="form-control" name="order" value="<%=item.order%>">
				</div>

				<div class="input-group">
					<input type="submit" value="确认编辑" class="btn btn-default">
					<button class="cancel btn btn-default"><a href="/admin/itemList"></a>取消</button>
				</div>

			</form>
		</div>
		<div class="col-md-4 col-sm-2 col-xs-0"></div>
	</div>

<!-- 引入 公用的底部 模版 -->
<% include footer%>
